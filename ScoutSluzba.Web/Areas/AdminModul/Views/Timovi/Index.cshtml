@using ScoutSluzba.Web.ViewModels

@{
    ViewData["Title"] = "Index";
}

<h1>Timovi</h1>

<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Naziv</th>
            <th>Trener</th>
            <th>Stadion</th>
            <th>Manager</th>
            <th>Predsjednik</th>
            <th>Lokacija</th>
            <th>Akcija</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model.rows)
        {
            <tr>
                <td>@x.Naziv</td>
                <td>@x.Trener</td>
                <td>@x.Stadion</td>
                <td>@x.Manager</td>
                <td>@x.Predsjednik</td>
                <td>@x.Lokacija</td>
                <td>
                    <a asp-action="Obrisi" asp-controller="Timovi" asp-area="AdministratorModul" asp-route-id="@x.TimID" class="btn btn-outline-danger btn-sm">Obrisi<i class="fa fa-trash"></i></a>

                    <a asp-action="Info" asp-controller="Timovi" asp-area="AdministratorModul" asp-route-id="@x.TimID" class="btn btn-outline-primary btn-sm">Info<i class="fa fa-pen"></i></a>

                </td>
            </tr>

        }
    </tbody>
</table>

<a asp-action="Dodaj" asp-controller="Timovi" asp-area="AdministratorModul" class="btn btn-outline-success btn-lg"> Dodaj Tim </a>
