@using ScoutSluzba.Web.ViewModels
@model ScoutSluzba.Web.ViewModels.LokacijaDodajVM

@{
    ViewData["Title"] = "Dodaj";
}


<div class="content-wrapper p-4">
    <h1 class="text-center"> Dodaj Lokaciju: </h1>

    <form asp-action="Snimi">
        <input asp-for="LokacijaID" hidden />

        <div class="form-group">

            <div>
                @Html.HiddenFor(s => s.LokacijaID)
            </div>

            <div class="form-group">
                <label>Naziv: </label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Ulica: </label>
                <input asp-for="Ulica" class="form-control" />
                <span asp-validation-for="Ulica" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Adresa: </label>
                <input asp-for="Adresa" class="form-control" />
                <span asp-validation-for="Adresa" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label>Grad: </label>
                <select asp-for="GradID" asp-items="Model.Grad" class="form-control"></select>
                <span asp-validation-for="GradID" class="text-danger"></span>
            </div>

            <input type="submit" class="btn btn-outline-success btn-lg" value="Snimi" />
        </div>
    </form>
</div>

