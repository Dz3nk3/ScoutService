@using ScoutSluzba.Web.ViewModels
@model ScoutSluzba.Web.ViewModels.DrzavaDodajVM

@{
    ViewData["Title"] = "Dodaj";
}


<div class="content-wrapper p-4">
    <h1 class="text-center"> Dodaj Drzavu: </h1>

    <form asp-action="Snimi">
        <input asp-for="DrzavaID" hidden />

        <div class="form-group">

            <div>
                @Html.HiddenFor(s => s.DrzavaID)
            </div>

            <div class="form-group">
                <label>Naziv: </label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Oznaka: </label>
                <input asp-for="Oznaka" class="form-control" />
                <span asp-validation-for="Oznaka" class="text-danger"></span>
            </div>

        
            <input type="submit" class="btn btn-outline-success btn-lg" value="Snimi" />
        </div>
    </form>
</div>
