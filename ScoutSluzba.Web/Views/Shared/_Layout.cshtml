<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ScoutSluzba.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ScoutSluzba.Web</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Scout" asp-controller="OcjeneiKomentari" asp-action="Index">Ocjene i Kom</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="AdminModul" asp-controller="Igraci" asp-action="Index">Igraci</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="AdminModul" asp-controller="Zaposlenik" asp-action="Index">Zaposlenik</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="AdminModul" asp-controller="Timovi" asp-action="Index">Timovi</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="AdminModul" asp-controller="Liga" asp-action="Index">Lige</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Scout" asp-controller="Grad" asp-action="Index">Grad</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Scout" asp-controller="Drzava" asp-action="Index">Drzava</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Scout" asp-controller="Lokacija" asp-action="Index">Lokacija</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="AdminModul" asp-controller="Specifikacija" asp-action="Index">Specifikacija</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="AdminModul" asp-controller="Kategorija" asp-action="Index">Kategorija</a>
                        </li>


                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - ScoutSluzba.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
